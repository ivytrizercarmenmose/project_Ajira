<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bga"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/btncreate"
        android:layout_width="310dp"
        android:layout_height="47dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="32dp"
        android:text="CREATE ACCOUNT"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="@+id/Editpass"
        app:layout_constraintTop_toBottomOf="@+id/Editpass" />

    <Button
        android:id="@+id/btnlogin"
        android:layout_width="310dp"
        android:layout_height="47dp"
        android:layout_marginStart="33dp"
        android:layout_marginTop="32dp"
        android:text="LOGIN"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="@+id/btncreate"
        app:layout_constraintTop_toBottomOf="@+id/btncreate" />

    <TextView
        android:textColorHint="@color/black"
        android:id="@+id/textView"
        android:layout_width="310dp"
        android:layout_height="47dp"
        android:layout_marginStart="78dp"
        android:layout_marginTop="32dp"
        android:text="AJIRA"
        android:textColor="@color/black"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/comment"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:textColorHint="@color/black"
        android:id="@+id/Editname"
        android:layout_width="310dp"
        android:layout_height="47dp"
        android:layout_marginTop="57dp"
        android:layout_marginEnd="25dp"
        android:ems="10"
        android:hint="Enter Full Names"
        android:inputType="text"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="@+id/comment"
        app:layout_constraintTop_toBottomOf="@+id/comment" />

    <EditText
        android:textColorHint="@color/black"
        android:id="@+id/Editemail"
        android:layout_width="310dp"
        android:layout_height="47dp"
        android:layout_marginTop="43dp"
        android:ems="10"
        android:hint="Enter Email"
        android:inputType="textEmailAddress"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="@+id/Editname"
        app:layout_constraintTop_toBottomOf="@+id/Editname" />

    <EditText
        android:textColorHint="@color/black"
        android:id="@+id/Editphone"
        android:layout_width="310dp"
        android:layout_height="47dp"
        android:layout_marginTop="41dp"
        android:ems="10"
        android:hint="Enter Phone Number"
        android:inputType="phone"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="@+id/Editemail"
        app:layout_constraintTop_toBottomOf="@+id/Editemail" />

    <EditText
        android:textColorHint="@color/black"
        android:id="@+id/Editpass"
        android:layout_width="310dp"
        android:layout_height="47dp"
        android:layout_marginTop="38dp"
        android:ems="10"
        android:hint="Enter Password"
        android:inputType="textPassword"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="@+id/Editphone"
        app:layout_constraintTop_toBottomOf="@+id/Editphone" />

    <TextView
        android:textColorHint="@color/black"
        android:id="@+id/comment"
        android:layout_width="310dp"
        android:layout_height="47dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="24dp"
        android:text="Ensuring you get the best person for your job"
        android:textColor="@color/black"
        android:textStyle="italic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />
</androidx.constraintlayout.widget.ConstraintLayout>